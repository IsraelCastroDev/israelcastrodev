---
import MenuIcon from "./Icons/MenuIcon.astro";
import MenuIconCerrar from "./Icons/MenuIconCerrar.astro";
import { IoLogoWhatsapp } from "react-icons/io";

---

<header class="hero">
  <nav class="nav container sm:mx-20 lg:mx-40" id="nav">
    <a href="/" class="nav__logo">
      <div class="nav__logo-bg"></div>
    </a>

    <ul class="nav__links">
      <li class="nav__item">
        <a href="#" class="nav__link">Inicio</a>
      </li>
      <li class="nav__item">
        <a href="#proyectos" class="nav__link">Proyectos</a>
      </li>
      <li class="nav__item">
        <a href="#" class="nav__link">Hablilidades</a>
      </li>
      <li class="nav__item">
        <a href="#" class="nav__link">Sobre mi</a>
      </li>
      <li
        class="nav__item bg-sky-950 px-3 py-1 rounded-md w-[70%] lg:w-[100%] flex justify-center items-center hover:bg-green-500 transition-colors duration-500 ease-in-out"
      >
        <a
          href="https://wa.me/51903086449"
          target="_blank"
          class="nav__link px-2">Cont√°ctame</a
        >
        <IoLogoWhatsapp size={30} />
      </li>
    </ul>

    <a href="#nav" class="nav__hamburguer">
      <MenuIcon />
    </a>

    <a href="#" class="nav__close">
      <MenuIconCerrar />
    </a>
  </nav>
</header>

<style>
  .container {
    margin: 0 auto;
    width: 90%;
    max-width: 1200px;
    overflow: hidden;
  }

  .hero {
    background-size: cover;
    color: #fff;
  }

  .nav {
    --state-close: scale(0);
    --state-hamburguer: scale(1);
    --state-menu: translate(-100%);

    padding: 20px 0;
    display: grid;
    justify-content: space-between;
    align-items: center;
    grid-template-columns: repeat(2, max-content);
  }

  .nav:target {
    --state-menu: translate(0);
    --state-close: scale(1);
    --state-hamburguer: scale(0);
  }

  .nav__logo {
    z-index: 1;
    width: 100px;
  }

  .nav__logo-bg {
    background-image: url("../assets/logo-mobile.png");
    background-position: left center;
    background-size: 100px;
    background-repeat: no-repeat;
    height: 50px;
    width: auto;
    padding-top: 5px;
  }

  .nav__hamburguer,
  .nav__close {
    cursor: pointer;
    grid-column: -2/-1;
    grid-row: 1/2;
    transition: 0.4s transform;
  }

  .nav__hamburguer {
    transform: var(--state-hamburguer);
  }

  .nav__close {
    transform: var(--state-close);
  }

  .nav__icon {
    width: 40px;
  }

  .nav__links {
    background-color: #000;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 0;

    display: grid;
    align-content: center;
    align-items: center;
    gap: 2em;
    padding-left: 11%;

    transform: var(--state-menu);
    transition: 0.3s transform;
  }

  .nav__item {
    list-style: none;
  }

  .nav__link {
    color: #fff;
    text-decoration: none;
    font-size: 1.2rem;
    letter-spacing: 2px;
    font-weight: 700;
    letter-spacing: 0.9;
    text-align: center;
  }

  @media (width > 300px and width < 640px) {
    .nav__logo-bg {
      background-position: left center;
      background-size: 100px;
      background-repeat: no-repeat;
      height: 50px;
      width: auto;
      padding-top: 5px;
    }
  }

  @media (width > 640px and width < 1004px) {
    .container {
      width: 69%;
      max-width: 100px;
    }
  }

  @media (width > 1004px) {
    .container {
      max-width: 1049px;
    }

    .nav {
      --state-hamburguer: scale(0);
      --state-menu: translate(0);
    }

    .nav:target {
      --state-close: scale(0);
    }

    .nav__logo-bg {
      background-position: left center;
      background-size: 100px;
      height: 100px;
    }

    .nav__links {
      padding: 0;
      background-color: unset;
      position: unset;
      gap: 1.5em;
      grid-auto-flow: column;

      transform: unset;

      grid-column: -2/-1;
      grid-row: 1/2;
    }

    .nav__link {
      font-size: 1rem;
      letter-spacing: none;
    }
  }
</style>
